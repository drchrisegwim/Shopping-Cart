<% content_for :title,  @product.name + " | Shopping" %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p class='pimage'>
  <strong>Image:</strong>
  <%= image_tag(@product.image.url, alt: 'Product image') if @product.image %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
